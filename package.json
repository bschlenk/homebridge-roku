{
  "name": "homebridge-roku",
  "version": "3.0.1",
  "description": "Control Roku media players through homebridge",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint bin/* src/**/*.js scripts/**/*.js",
    "test": "npm run lint && jest",
    "test:watch": "jest --watch",
    "build": "tsc",
    "start": "npm run build && DEBUG=* homebridge -D -U ./homebridge -P .",
    "release": "standard-version",
    "prepublishOnly": "npm run test && npm run build"
  },
  "engines": {
    "node": ">=10.17.0",
    "homebridge": ">=1.3.0"
  },
  "bin": {
    "homebridge-roku-config": "./bin/setup"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/bschlenk/homebridge-roku.git"
  },
  "keywords": [
    "roku",
    "homebridge",
    "homekit",
    "homebridge-plugin"
  ],
  "author": "Brian Schlenker <bschlenk@umich.edu>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bschlenk/homebridge-roku/issues"
  },
  "homepage": "https://github.com/bschlenk/homebridge-roku#readme",
  "dependencies": {
    "deepmerge": "^4.2.2",
    "roku-client": "^5.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/jest": "^26.0.20",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "hap-nodejs": "^0.9.2",
    "homebridge": "^1.3.1",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "standard-version": "^9.1.1",
    "typescript": "^4.2.2"
  }
}
