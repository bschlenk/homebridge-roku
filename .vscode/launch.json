  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Homebridge",
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "tsc: build - tsconfig.json",
      "program": "${workspaceFolder}/node_modules/.bin/homebridge",
      "env": { "DEBUG": "*" },
      "args": ["-D", "-U", "./homebridge", "-P", "."]
    }
  ]
}
